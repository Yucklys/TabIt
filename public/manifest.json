{
  "manifest_version": 3,
  "name": "Tab Sense",
  "version": "1.0.0",
  "description": "AI Powered Tab Manager for Chrome",
  "action": {
    "default_popup": "index.html",
    "default_title": "Tab Sense - AI Tab Manager"
  },
  "permissions": [
	"tabs",
	"tabGroups",
	"scripting",
	"storage"
  ],
  "host_permissions": [
	"http://*/*",
	"https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "optional_permissions": [
    "ai"
  ],
}
