{
  "manifest_version": 3,
  "name": "Tab Sense",
  "version": "1.0.0",
  "description": "AI Powered Tab Manager for Chrome",
  "action": {
    "default_popup": "index.html",
    "default_title": "Tab Sense - AI Tab Manager"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "scripting",
    "tabGroups"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
